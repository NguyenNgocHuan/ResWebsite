<div class="modal fade" id="themDiaDiem" role="dialog">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Thông tin địa điểm</h4>
            </div>
            <div class="modal-body">
                <form role="form" id="frmThemDiaDiem">
                    <div class="form-group">
                        <label for="txtTenDiaDiem">Tên địa điểm :</label>
                        <input name="txtTenDiaDiem" id="txtTenDiaDiem" class="form-control"/>
                        
                    </div>
                    <div class="form-group">
                        <label for="txtGiaTien">Giá tiền :</label>
                        <input type="text" class="form-control" name="txtGiaTien" id="txtGiaTien">
