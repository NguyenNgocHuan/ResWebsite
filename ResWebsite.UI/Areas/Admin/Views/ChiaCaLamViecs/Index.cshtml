
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<style>
    #table tr:not(:first-child) {
        cursor: pointer;
        transition: all .1s ease-in-out;
    }

        #table tr:not(:first-child):hover {
            background-color: #ddd;
        }
</style>

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">Chia ca làm việc</h3>
    </div>
</div>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item " aria-current="page">Trang chủ</li>
        <li class="breadcrumb-item active" aria-current="page">Chia ca làm việc</li>
    </ol>
</nav>

<div class="row">
    <div class="col-md-3">
        <select class="form-control" id="txtChucVu">
            <option value="">Chọn chức vụ nhân viên</option>
            <option value="Quản lý">Nhân viên quản lý</option>
            <option value="Nhân viên kho">Nhân viên kho</option>
            <option value="Nhân viên tư vấn">Nhân viên tư vấn</option>
            <option value="Nhân viên gọi món">Nhân viên gọi món</option>
            <option value="Nhân viên bảo vệ">Nhân viên bảo vệ</option>
            <option value="Nhân viên giao hàng">Nhân viên giao hàng</option>
        </select>
    </div>
    <div class="col-md-2">
        <button class="btn btn-primary" id="btnSearch">Tìm kiếm</button>
    </div>
    <div class="col-md-2">
        <button class="btn btn-primary" id="btnResetSearch">Hủy tìm kiếm</button>
    </div>
    <div class="col-md-2">
        Chọn ngày làm việc
    </div>
    <div class="col-md-3">
        <input type="date" id="txtNgayLamViec" class="form-control " />
    </div>
</div><br /><hr />
<div class="row">
    <div class="col-lg-12">
        <p id="tenNhanVien">Chia ca làm việc cho nhân viên : </p><div id="idTemp" hidden="hidden"></div>
    </div>
    <hr />
    <div class="col-lg-12">
        <div class="col-md-6">
            <p>Danh sách nhân viên</p>
            <div>
                <table class="table" id="table">
                    <thead>
                        <tr>
                            <td>
                                Mã nhân viên
                            </td>
                            <td>
                                Tên nhân viên
                            </td>
                        </tr>
                    </thead>
                    <tbody id="listNhanViens">
                        @*<tr></tr>
                        <tr id="listNhanViens"></tr>*@
                        @*@{
                            foreach (var item in @ViewBag.listEmployee)
                            {
                                <tr>
                                    <td>
                                        @item.EmployeeId
                                    </td>
                                    <td>
                                        @item.EmployeeName
                                    </td>
                                </tr>
                            }
                        }*@
                    </tbody>
                </table>

            </div>
        </div>
        <div class="col-md-6">
            <p>Danh sách các ca làm việc</p>
            <div>
                <table class="table" id="tableCa">
                    <thead>
                        <tr>
                            <td>
                               Mã ca
                            </td>
                            <td>
                                Tên ca
                            </td>
                            <td>
                                Thời gian vào
                            </td>
                            <td>
                                Thời gian ra
                            </td>
                            <td>
                                Chọn ca
                            </td>
                        </tr>
                    </thead>
                    <tbody id="listCaLamViec"></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/plugins/bootbox.min.js"></script>
<script src="~/Scripts/plugins/jquery.twbsPagination.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/Controllers/chiaCaLamViecController.js"></script>
