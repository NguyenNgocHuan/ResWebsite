@model IEnumerable<ResWebsite.DAL.Entity1.CaLamViec>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/plugins/bootbox.min.js"></script>
<script src="~/Scripts/plugins/jquery.twbsPagination.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/Controllers/caLamViecController.js"></script>
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">Ca làm việc</h3>
    </div>
</div>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item " aria-current="page">Trang chủ</li>
        <li class="breadcrumb-item " aria-current="page">Nhân sự</li>
        <li class="breadcrumb-item active" aria-current="page">Ca làm việc</li>
    </ol>
</nav>
<div class="row">
    <div class="col-md-3">
        <button id="btnThemCaLamViec" class="btn btn-default" data-toggle="modal" data-target="#modalAddUpdate">Thêm ca làm việc</button>
    </div>
    <div class="col-md-3">
        <input id="txtInformationSearch" type="text" class="form-control" placeholder="Nhập tên ca làm việc" />
    </div>
    <div class="col-md-3">
        <button class="btn btn-primary" id="btnSearch">Tìm kiếm</button>
    </div>
    <div class="col-md-3">
        <button class="btn btn-primary" id="btnResetSearch">Hủy tìm kiếm</button>
    </div>
</div><br />
<div class="row">
    <div class="col-lg-12">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Tên ca làm việc
                    </th>
                    <th>
                        Thời gian vào
                    </th>
                    <th>
                        Thời gian ra
                    </th>
                    <th>
                       Ghi chú
                    </th>

                    <th></th>
                </tr>
            </thead>
            <tbody id="listCaLamViecs"></tbody>
        </table>
        <div id="pagination" class="pagination">

        </div>
    </div>
</div>
@RenderPage("_ThemCaLamViec.cshtml")
@RenderPage("_XemChiTietCaLamViec.cshtml")
