<div class="modal fade" id="themNhanVien" role="dialog">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Thông tin nhân viên</h4>
            </div>
            <div class="modal-body">
                <form role="form" id="frmThemNhanVien">
                    <div class="form-group">
                        <label for="txtTenNhanVien">Tên nhân viên :</label>
                        <input name="txtTenNhanVien" id="txtTenNhanVien" class="form-control"/>
                        
                    </div>
                    <div class="form-group">
                        <label for="rdoGioiTinh">Giới tính :</label>
                        <label class="radio-inline">
                            <input type="radio" name="rdoGioiTinh" id="rdoNam" value="true">Nam
                        </label>
                        <label class="radio-inline">
                            <input type="radio" name="rdoGioiTinh" id="rdoNu" value="false">Nữ
                        </label>
                    </div>
                    <div class="form-group">
                        <label for="txtNgaySinh">Ngày sinh :</label>
                        <input type="date" class="form-control" name="txtNgaySinh" id="txtNgaySinh">
                    </div>
                    <div class="form-group">
                        <label for="txtDiaChi">Địa chỉ :</label>
                        <textarea name="txtDiaChi" id="txtDiaChi" class="form-control"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="txtSoDienThoai">Số điện thoại :</label>
                        <input  type="text" name="txtSoDienThoai" id="txtSoDienThoai" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label for="txtChucVu">Chức vụ :</label>
                        <select class="form-control" id="txtChucVu">
                            <option value="">Chọn chức vụ</option>
                            <option value="Quản lý">Quản lý</option>
                            <option value="Nhân viên kho">Nhân viên kho</option>
                            <option value="Nhân viên tư vấn">Nhân viên tư vấn</option>
                            <option value="Nhân viên gọi món">Nhân viên gọi món</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <span style="float:left;width:280px;height:130px;;">
                            <label for="txtHinhAnh">Hình ảnh :</label>
                            <input type="text" class="form-control" name="txtHinhAnh" id="txtHinhAnh" readonly="readonly">
                            <a id="btnSelectImage" class="btn btn-default" href="#">Chọn hình</a>
                            <a id="btnClearImage" class="btn btn-default" href="#">Hủy chọn</a>
                        </span>
                        <span style="float:left;width:280px;height:130px;align-content:center;padding-right:50px;padding-top:20px;">
                            <img id="imgImage" class="zoom" width="120" height="120" style="float:right;" />
                        </span>
                    </div><br /><br />
                    
                    <div class="form-group">
                        <label for="txtMoTa">Trạng thái :</label>
                        <label class="radio-inline">
                            <input type="radio" name="rdoTrangThai" id="rdoBiKhoa" value="0">Bị khóa
                        </label>
                        <label class="radio-inline">
                            <input type="radio" name="rdoTrangThai" id="rdoDangHoatDong" value="1">Đang hoạt động
                        </label>
                    </div>
                    <div class="form-group">
                        <label for="txtTenDangNhap">Tên đăng nhập :</label>
                        <input type="text" name="txtTenDangNhap" id="txtTenDangNhap" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="txtEmail">Email :</label>
                        <input type="text" name="txtEmail" id="txtEmail" class="form-control" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary" id="btnSave">Lưu</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>
