@model IEnumerable<ResWebsite.DAL.Entity1.ThucDon>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/plugins/bootbox.min.js"></script>
<script src="~/Scripts/plugins/jquery.twbsPagination.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/Controllers/thucDonController.js"></script>
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">Nhóm thực đơn</h3>
    </div>
</div>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item " aria-current="page">Trang chủ</li>
        <li class="breadcrumb-item " aria-current="page">Thực đơn</li>
        <li class="breadcrumb-item active" aria-current="page">Nhóm thực đơn</li>
    </ol>
</nav>
<div class="row">
    <div class="col-md-3">
        <button id="btnThemThucDon" class="btn btn-default" data-toggle="modal" data-target="#modalAddUpdate">Thêm thực đơn</button>
    </div>
    <div class="col-md-3">
        <input id="txtInformationSearch" type="text" class="form-control" placeholder="Nhập tên thực đơn" />
    </div>
    <div class="col-md-3">
        <button class="btn btn-primary" id="btnSearch">Tìm kiếm</button>
    </div>
    <div class="col-md-3">
        <button class="btn btn-primary" id="btnResetSearch">Hủy tìm kiếm</button>
    </div>
</div><br />
<div class="row">
    <div class="col-lg-12">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Tên thực đơn
                    </th>
                    <th>
                        Loại thực đơn
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="listThucDons"></tbody>
        </table>
        <div id="pagination" class="pagination">

        </div>
    </div>
</div>
@RenderPage("_ThemThucDon.cshtml")
@RenderPage("_XemChiTietThucDon.cshtml")
@RenderPage("_ThemChiTietThucDon.cshtml")